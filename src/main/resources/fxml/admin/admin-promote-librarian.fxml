<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyflow.app.gui.admin.AdminPromoteLibrarianController">

    <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="500.0" spacing="20.0" styleClass="form-card">

        <VBox alignment="CENTER" spacing="5.0">
            <Label styleClass="header-label" text="Personel Yonetimi" />
            <Label styleClass="sub-header-label" text="Kullaniciyi Kutuphaneciye Terfi Et" />
        </VBox>

        <VBox spacing="15.0">
            <Label text="Bu islem mevcut bir kullaniciyi Kutuphaneci roluyle yetkilendirir ve bir tesise atar." textFill="#666" wrapText="true"/>

            <!-- Email Girişi -->
            <VBox>
                <Label text="Kullanici E-posta Adresi" />
                <TextField fx:id="emailField" promptText="Kullanici e-postasini girin (or. user@studyflow.com)" />
            </VBox>

            <!-- DEĞİŞTİ: Tesis ID Girişi -->
            <VBox>
                <Label text="Tesis ID" />
                <TextField fx:id="facilityIdField" promptText="Tesis ID girin (or. 5)" />
            </VBox>
        </VBox>

        <Label fx:id="statusLabel" managed="false" visible="false" wrapText="true" />

        <Button maxWidth="1.7976931348623157E308" onAction="#handlePromoteUser" styleClass="primary-button" text="Kutuphaneci Yetkisi Ver" />

    </VBox>
</StackPane>