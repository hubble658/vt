<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="NEVER"
            stylesheets="@../../css/styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studyflow.app.gui.admin.AdminFacilitiesListController">

    <VBox spacing="25" style="-fx-background-color: #f8fafc; -fx-padding: 30;">

        <!-- HEADER -->
        <HBox alignment="CENTER_LEFT" spacing="20">
            <VBox spacing="5">
                <Label text="Facilities Management" style="-fx-font-size: 28px; -fx-font-weight: 800; -fx-text-fill: #1e293b;"/>
                <Label text="View and manage all library facilities" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
            </VBox>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="totalCountLabel" text="Total: 0 facilities" style="-fx-font-size: 14px; -fx-text-fill: #64748b;"/>
        </HBox>

        <!-- SEARCH BAR -->
        <HBox spacing="15" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search facilities..." prefWidth="300" styleClass="text-field"/>
            <Button text="Search" onAction="#handleSearch" styleClass="secondary-button"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="+ Create New Facility" onAction="#handleCreateNew" styleClass="primary-button"/>
        </HBox>

        <!-- FACILITIES GRID -->
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
            <FlowPane fx:id="facilitiesContainer" hgap="20" vgap="20" alignment="TOP_LEFT" style="-fx-padding: 10 0;">
                <!-- Facility cards will be added dynamically -->
            </FlowPane>
        </ScrollPane>

        <!-- EMPTY STATE -->
        <VBox fx:id="emptyState" alignment="CENTER" spacing="15" visible="false" managed="false" style="-fx-padding: 60;">
            <Label text="No Facilities Found" style="-fx-font-size: 24px; -fx-font-weight: 700; -fx-text-fill: #94a3b8;"/>
            <Label text="Create your first facility to get started" style="-fx-font-size: 14px; -fx-text-fill: #cbd5e1;"/>
            <Button text="Create Facility" onAction="#handleCreateNew" styleClass="primary-button" style="-fx-padding: 12 24;"/>
        </VBox>

    </VBox>
</ScrollPane>
