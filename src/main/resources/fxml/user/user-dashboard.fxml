<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30" style="-fx-background-color: #f4f6f8;" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyflow.app.gui.user.UserDashboardController">

    <!-- Karşılama Mesajı -->
    <Label text="Bugun ne yapmak istersiniz?" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333;" />

    <!-- Grid Menü -->
    <GridPane hgap="40" vgap="40" alignment="CENTER" styleClass="dashboard-grid">

        <!-- 1. Kütüphaneler (Aktif) -->
        <Button fx:id="btnExplore" text="Kutuphaneleri Kesfet" onAction="#handleExploreFacilities"
                styleClass="dashboard-card-btn" prefWidth="280" prefHeight="220" GridPane.columnIndex="0" GridPane.rowIndex="0" />

        <!-- 2. Rezervasyonlarım -->
        <Button fx:id="btnReservations" text="Rezervasyonlarim" onAction="#handleMyReservations"
                styleClass="dashboard-card-btn" prefWidth="280" prefHeight="220" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <!-- 3. Profilim -->
        <Button fx:id="btnProfile" text="Profilim" onAction="#handleProfile"
                styleClass="dashboard-card-btn" prefWidth="280" prefHeight="220" GridPane.columnIndex="2" GridPane.rowIndex="0" />

        <!-- Alt Satır (Placeholderlar) -->
        <Button text="Etkinlikler" disable="true"
                styleClass="dashboard-card-btn" prefWidth="280" prefHeight="220" GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <Button text="Yardim &amp; Destek" disable="true"
                styleClass="dashboard-card-btn" prefWidth="280" prefHeight="220" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Button text="Cikis Yap" onAction="#handleLogout"
                styleClass="dashboard-card-btn" style="-fx-text-fill: #e74c3c;" prefWidth="280" prefHeight="220" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    </GridPane>

</VBox>