<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="0" stylesheets="@../../../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyflow.app.gui.user.facility.ExploreFacilitiesController">

    <!-- KIOSK HEADER (Daha büyük ve ferah) -->
    <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: white; -fx-padding: 20 40; -fx-border-color: #e0e0e0; -fx-border-width: 0 0 1 0;">

        <!-- BÜYÜK GERİ BUTONU -->
        <Button text="← Panele Don" onAction="#handleBack" styleClass="big-back-button" />

        <Region HBox.hgrow="ALWAYS" />

        <!-- Filtreleme (Daha büyük font) -->
        <HBox alignment="CENTER" spacing="15">
            <Label text="Sirala:" style="-fx-text-fill: #666; -fx-font-size: 16px;" />
            <ComboBox fx:id="sortComboBox" prefWidth="200.0" prefHeight="40.0" promptText="Isim (A-Z)" style="-fx-font-size: 14px;" />
        </HBox>
    </HBox>

    <!-- Liste Alanı -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: #f4f6f8;" VBox.vgrow="ALWAYS">
        <content>
            <StackPane alignment="TOP_CENTER" style="-fx-background-color: #f4f6f8;">
                <padding><Insets top="40" bottom="40" /></padding>

                <!-- Grid: Kartlar arası boşluk artırıldı -->
                <FlowPane fx:id="facilityGrid" alignment="TOP_LEFT" hgap="30.0" vgap="30.0" maxWidth="1100.0" prefWrapLength="1100.0">
                    <padding><Insets left="30.0" right="30.0" /></padding>
                </FlowPane>
            </StackPane>
        </content>
    </ScrollPane>

</VBox>