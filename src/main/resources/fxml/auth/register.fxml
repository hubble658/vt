<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.animation.TranslateTransition?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.util.Duration?>

<StackPane stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyflow.app.gui.auth.RegisterController">

    <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefWidth="450.0" spacing="20.0" styleClass="form-card">

        <VBox alignment="CENTER" spacing="5.0">
            <Label styleClass="header-label" text="Create Account" />
            <Label styleClass="sub-header-label" text="Join StudyFlow today" />
        </VBox>

        <!-- Ana Form Yapısı -->
        <VBox spacing="10.0">

            <!-- İsim Soyisim Yan Yana -->
            <HBox spacing="10.0">
                <VBox HBox.hgrow="ALWAYS" spacing="10.0">
                    <Label text="First Name" />
                    <TextField fx:id="firstNameField" promptText="John" />
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="10.0">
                    <Label text="Last Name" />
                    <TextField fx:id="lastNameField" promptText="Doe" />
                </VBox>
            </HBox>

            <Label text="Email Address" />
            <TextField fx:id="emailField" promptText="john@example.com" />

            <Label text="Password" />
            <PasswordField fx:id="passwordField" promptText="Create a strong password" />

            <Label text="Confirm Password" />
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" />
        </VBox>

        <Label fx:id="errorLabel" textFill="red" visible="false" managed="false" wrapText="true"/>

        <Button maxWidth="1.7976931348623157E308" onAction="#handleRegister" styleClass="primary-button" text="Sign Up" />

        <HBox alignment="CENTER">
            <Button onAction="#handleGoToLogin" styleClass="link-button" text="Already have an account? Sign In" />
        </HBox>

    </VBox>

    <!-- ANIMASYON TANIMLARI -->
    <!-- DÜZELTME: Süreler 50ms'den 80ms'e çıkarıldı (Daha smooth efekt için) -->
    <fx:define>
        <TranslateTransition fx:id="shakePassAnim" node="$passwordField"
                             fromX="0" byX="10" cycleCount="6" autoReverse="true">
            <duration><Duration millis="70" /></duration>
        </TranslateTransition>

        <TranslateTransition fx:id="shakeConfirmAnim" node="$confirmPasswordField"
                             fromX="0" byX="10" cycleCount="6" autoReverse="true">
            <duration><Duration millis="70" /></duration>
        </TranslateTransition>

        <TranslateTransition fx:id="shakeFirstNameAnim" node="$firstNameField"
                             fromX="0" byX="10" cycleCount="6" autoReverse="true">
            <duration><Duration millis="70" /></duration>
        </TranslateTransition>

        <TranslateTransition fx:id="shakeLastNameAnim" node="$lastNameField"
                             fromX="0" byX="10" cycleCount="6" autoReverse="true">
            <duration><Duration millis="70" /></duration>
        </TranslateTransition>

        <TranslateTransition fx:id="shakeEmailAnim" node="$emailField"
                             fromX="0" byX="10" cycleCount="6" autoReverse="true">
            <duration><Duration millis="70" /></duration>
        </TranslateTransition>
    </fx:define>

</StackPane>