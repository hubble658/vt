<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="700.0" prefWidth="1100.0" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.studyflow.app.gui.librarian.LibrarianMainController">

    <!-- SOL MENÜ (SIDEBAR) -->
    <left>
        <VBox prefWidth="260.0" styleClass="sidebar">
            <Label styleClass="app-logo-text" text="Kutuphaneci Paneli" />

            <!-- 1. DASHBOARD (Emojisiz) -->
            <Button fx:id="btnDashboard" maxWidth="Infinity" onAction="#showDashboard" styleClass="nav-button" text="Panel" />

            <!-- 2. MY FACILITY (Açılır Menülü, Emojisiz) -->
            <Button fx:id="btnFacility" maxWidth="Infinity" onAction="#showFacilityMenu" styleClass="nav-button">
                <graphic>
                    <HBox alignment="CENTER_LEFT" maxWidth="Infinity">
                        <Label text="Tesisim" textFill="#666666" HBox.hgrow="ALWAYS" />
                        <!-- Sağdaki Ok İşareti -->
                        <Label styleClass="nav-button-arrow" text="►" />
                    </HBox>
                </graphic>
            </Button>

            <!-- Spacer (Boşluk) -->
            <VBox VBox.vgrow="ALWAYS" />

            <!-- ÇIKIŞ BUTONU (Emojisiz) -->
            <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="nav-button" text="Cikis" />
        </VBox>
    </left>

    <!-- ÜST BAR (HEADER) -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="top-bar">
            <Label fx:id="welcomeLabel" styleClass="welcome-text" text="Hosgeldiniz, Kutuphaneci" />
            <HBox HBox.hgrow="ALWAYS" />
            <Label fx:id="dateLabel" styleClass="date-text" text="26/01/2025" />
        </HBox>
    </top>

    <!-- DEĞİŞEN İÇERİK ALANI -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #f4f6f8;" />
    </center>

</BorderPane>