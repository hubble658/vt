<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="700.0" prefWidth="1200.0"
            stylesheets="@../../../css/styles.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.studyflow.app.gui.librarian.editor.LibrarianSeatEditorController">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10"
              style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 0 0 1 0;">
            <Label text="Koltuk Duzen Editoru"
                   style="-fx-font-weight: bold; -fx-text-fill: #555;">
                <font><Font size="14.0" /></font>
            </Label>

            <Label fx:id="lblBreadcrumb" text=" > Bir Blok Secin"
                   style="-fx-text-fill: #888;" />

            <Region HBox.hgrow="ALWAYS" />

            <Button fx:id="btnBack"
                    text="Back"
                    onAction="#handleBack"
                    visible="false"
                    managed="false"
                    styleClass="link-button" />
        </HBox>
    </top>

    <!-- CENTER CANVAS AREA -->
    <center>
        <StackPane style="-fx-background-color: #dcdcdc;">

            <!-- LAYER 1: FACILITY MAP -->
            <ScrollPane fx:id="facilityScroll"
                        fitToHeight="true"
                        fitToWidth="true"
                        pannable="true"
                        visible="true"
                        managed="true">
                <content>
                    <StackPane alignment="CENTER" minHeight="700.0" minWidth="700.0">
                        <Pane fx:id="facilityCanvas"
                              maxHeight="600.0" maxWidth="600.0"
                              minHeight="600.0" minWidth="600.0"
                              style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);" />
                    </StackPane>
                </content>
            </ScrollPane>

            <!-- LAYER 2: DESK SELECTION -->
            <ScrollPane fx:id="deskSelectionScroll"
                        fitToHeight="true"
                        fitToWidth="true"
                        pannable="true"
                        visible="false"
                        managed="false">
                <content>
                    <StackPane alignment="CENTER" minHeight="700.0" minWidth="700.0">
                        <Pane fx:id="deskSelectionCanvas"
                              maxHeight="600.0" maxWidth="600.0"
                              minHeight="600.0" minWidth="600.0"
                              style="-fx-background-color: white; -fx-border-color: #333; -fx-border-width: 2;">
                            <effect>
                                <DropShadow color="#00000040" radius="20" />
                            </effect>
                        </Pane>
                    </StackPane>
                </content>
            </ScrollPane>

            <!-- LAYER 3: SEAT EDITOR -->
            <StackPane fx:id="seatEditorContainer"
                       visible="false"
                       managed="false"
                       style="-fx-background-color: #dcdcdc;">

                <Pane maxHeight="600.0" maxWidth="600.0"
                      minHeight="600.0" minWidth="600.0"
                      style="-fx-background-color: white; -fx-border-color: #999; -fx-border-width: 1;">
                    <effect>
                        <DropShadow color="#00000020" radius="10" />
                    </effect>

                    <children>
                        <Pane fx:id="drawingSurface"
                              maxHeight="600.0" maxWidth="600.0"
                              minHeight="600.0" minWidth="600.0" />
                    </children>
                </Pane>

                <Label text="Koltuklari masa kenarlarina surukleyin"
                       StackPane.alignment="TOP_CENTER"
                       style="-fx-background-color: rgba(255,255,255,0.9); -fx-padding: 5 15; -fx-background-radius: 5; -fx-text-fill: #555; -fx-font-weight: bold;">
                    <StackPane.margin>
                        <Insets top="10" />
                    </StackPane.margin>
                    <effect>
                        <DropShadow color="#00000010" radius="2" />
                    </effect>
                </Label>
            </StackPane>

        </StackPane>
    </center>

    <!-- RIGHT SIDEBAR -->
    <right>
        <StackPane>

            <!-- 1. INSTRUCTIONS PANEL -->
            <VBox fx:id="sidebarInstructions"
                  prefWidth="300.0"
                  spacing="20.0"
                  styleClass="sidebar"
                  visible="true"
                  alignment="CENTER">
                <Label fx:id="lblSidebarTitle"
                       text="Bir Blok Secin"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #888;" />
                <Label fx:id="lblSidebarDesc"
                       text="Gezinme: Blok → Masa → Koltuk"
                       wrapText="true"
                       textAlignment="CENTER"
                       style="-fx-text-fill: #999;" />

                <Button fx:id="btnBackToBlocks"
                        text="← Blogu Degistir"
                        onAction="#handleBackToBlocks"
                        visible="false"
                        managed="false"
                        styleClass="link-button" />

                <Region VBox.vgrow="ALWAYS" />

            </VBox>

            <!-- 2. EDITOR PANEL -->
            <VBox fx:id="sidebarEditor"
                  prefWidth="300.0"
                  spacing="15.0"
                  styleClass="sidebar"
                  visible="false"
                  managed="false">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <Label styleClass="header-label" text="Koltuk Editoru" />
                <Label fx:id="lblCurrentDeskInfo"
                       styleClass="sub-header-label"
                       text="Masa: -" />
                <Label fx:id="lblRangeInfo"
                       style="-fx-font-size: 11px; -fx-text-fill: #e67e22;"
                       text="Aralik: -" />

                <Separator />

                <!-- New seat button (kenarlara otomatik diziyor) -->
                <Button maxWidth="Infinity"
                        onAction="#handleAddNewSeat"
                        styleClass="primary-button"
                        text="+ Masa Etrafina Koltuk Ekle" />

                <Separator />

                <!-- Properties Box -->
                <VBox fx:id="propertiesBox"
                      disable="true"
                      spacing="10.0">

                    <Label fx:id="lblSelectedSeatInfo"
                           style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                           text="Secim Yok" />

                    <VBox spacing="5">
                        <Label text="Koltuk Numarasi (ID)"
                               style="-fx-font-size: 12px; -fx-text-fill: #7f8c8d;" />
                        <Spinner fx:id="seatNumSpinner"
                                 editable="true"
                                 maxWidth="Infinity" />
                    </VBox>

                    <Label text="Hassas Konumlandirma (Surukle veya Kaydir)"
                           style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-padding: 5 0 0 0;" />

                    <VBox spacing="2">
                        <Label text="Pos X" style="-fx-font-size: 10px;" />
                        <Slider fx:id="posXSlider" />
                    </VBox>
                    <VBox spacing="2">
                        <Label text="Pos Y" style="-fx-font-size: 10px;" />
                        <Slider fx:id="posYSlider" />
                    </VBox>

                    <Button maxWidth="Infinity"
                            onAction="#handleDeleteSeat"
                            styleClass="danger-button"
                            text="Secili Koltugu Sil" />
                </VBox>

                <Separator />

                <Button fx:id="btnUndo"
                        maxWidth="Infinity"
                        onAction="#handleUndo"
                        styleClass="link-button"
                        text="↩ Geri Al" />

                <Button fx:id="btnSave"
                        maxWidth="Infinity"
                        onAction="#handleSaveChanges"
                        styleClass="success-button"
                        text="Degisiklikleri Kaydet" />

                <Label fx:id="statusLabel"
                       managed="false"
                       visible="false"
                       wrapText="true" />

                <VBox VBox.vgrow="ALWAYS" />

                <Button onAction="#handleExit"
                        styleClass="link-button"
                        text="Iptal &amp; Cikis" />
            </VBox>
        </StackPane>
    </right>

</BorderPane>
